{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "Node",
    "lib": [
      "es2020",
      "dom"
    ],
    "noEmit": true,
    "sourceMap": false,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "lib/**/*.ts",  // Include all TypeScript files in lib and its subdirectories
    "bin/**/*.ts"   // Include TypeScript files in bin and its subdirectories
  ],
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
